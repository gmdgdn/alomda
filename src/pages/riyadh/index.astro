---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import Container from "../../components/ui/Container.astro";
import { RIYADH_DISTRICTS as DISTRICTS } from "../../data/districts";
import { MapPin, ArrowLeft } from "lucide-react";
import riyadhImg from "../../assets/images/backgrounds/used-furniture-riyadh-alomda-sa.webp";

const title = "مناطق خدمة شراء الاثاث المستعمل بالرياض | العمدة";
const description =
  "نغطي جميع أحياء الرياض شمالاً وجنوباً، شرقاً وغرباً. نصلك أينما كنت في الرياض لشراء الاثاث المستعمل بأعلى الأسعار.";

// Group districts by region
const regions = {
  north: {
    title: "شمال الرياض",
    districts: DISTRICTS.filter((d) => d.region === "North"),
  },
  east: {
    title: "شرق الرياض",
    districts: DISTRICTS.filter((d) => d.region === "East"),
  },
  west: {
    title: "غرب الرياض",
    districts: DISTRICTS.filter((d) => d.region === "West"),
  },
  south: {
    title: "جنوب الرياض",
    districts: DISTRICTS.filter((d) => d.region === "South"),
  },
};
---

<Layout title={title} description={description}>
  {/* Hero Section */}
  <section
    class="bg-slate-900 py-20 relative overflow-hidden min-h-[50vh] flex items-center"
  >
    <div class="absolute inset-0 z-0">
      <Image
        src={riyadhImg}
        alt="شراء اثاث مستعمل بالرياض"
        class="w-full h-full object-cover opacity-40"
        format="webp"
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/60 to-transparent"
      >
      </div>
    </div>

    <Container className="relative z-20 text-center">
      <h1
        class="text-4xl md:text-6xl font-bold mb-6 text-white animate-fade-in-up"
      >
        مناطق الخدمة في <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-emerald-400 to-emerald-200"
          >الرياض</span
        >
      </h1>
      <p
        class="text-xl text-slate-300 max-w-2xl mx-auto animate-fade-in-up delay-100"
      >
        نصل إليك في أي مكان داخل الرياض. اختر حيك وتواصل معنا للمعاينة الفورية.
      </p>
    </Container>
  </section>

  {/* Interactive Map & Quick Filters */}
  <section class="py-12 bg-white border-b border-slate-100">
    <Container>
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-8">
          <h2 class="text-2xl font-bold text-slate-900 mb-4">
            استكشف مناطق تغطيتنا
          </h2>
          <div class="flex flex-wrap justify-center gap-3">
            {
              Object.entries(regions).map(([key, region]) => (
                <a
                  href={`/riyadh/${key}-riyadh`}
                  class="px-6 py-2 rounded-full bg-slate-100 text-slate-700 font-bold hover:bg-emerald-600 hover:text-white transition-all duration-300 shadow-sm hover:shadow-emerald-500/20"
                >
                  {region.title}
                </a>
              ))
            }
          </div>
        </div>
        <div
          class="rounded-3xl overflow-hidden shadow-2xl shadow-emerald-900/10 border-4 border-white"
        >
          <iframe
            width="100%"
            height="450"
            style="border:0"
            loading="lazy"
            allowfullscreen
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3624.690867866384!2d46.67529567514566!3d24.71355177802052!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e2f03890d489399%3A0xba974d1c98e79fd5!2sRiyadh%20Saudi%20Arabia!5e0!3m2!1sen!2sus!4v1709665432154!5m2!1sen!2sus"
          ></iframe>
        </div>
      </div>
    </Container>
  </section>

  {/* Regions Sections */}
  <div class="bg-slate-50 py-16 space-y-20">
    {
      Object.entries(regions).map(([key, region]) => (
        <section id={key} class="scroll-mt-24">
          <Container>
            <div class="flex items-center justify-between mb-8 border-b border-slate-200 pb-4 animate-fade-in-right">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-emerald-600 rounded-xl flex items-center justify-center text-white shadow-lg shadow-emerald-600/20">
                  <MapPin className="w-6 h-6" />
                </div>
                <h2 class="text-3xl font-bold text-slate-900">
                  {region.title}
                </h2>
              </div>
              <a
                href={`/riyadh/${key}-riyadh`}
                class="hidden md:flex items-center gap-2 text-emerald-600 font-bold hover:text-emerald-700 transition-colors"
              >
                <span>عرض الكل</span>
                <ArrowLeft className="w-4 h-4" />
              </a>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
              {region.districts.map((district, index) => (
                <a
                  href={`/riyadh/${key}-riyadh/${district.slug}`}
                  class="group relative bg-white p-6 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 border border-slate-100 flex items-center justify-between hover:-translate-y-1 animate-fade-in-up overflow-hidden"
                  style={`animation-delay: ${index * 50}ms`}
                >
                  {/* Live Status Badge */}
                  <div class="absolute top-3 left-3 flex items-center gap-1.5 bg-emerald-50 px-2 py-1 rounded-full border border-emerald-100">
                    <span class="relative flex h-2 w-2">
                      <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75" />
                      <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500" />
                    </span>
                    <span class="text-[10px] font-bold text-emerald-700">
                      متاح الآن
                    </span>
                  </div>

                  <div class="flex items-center gap-4 pt-4">
                    <div class="w-12 h-12 bg-emerald-50 rounded-full flex items-center justify-center text-emerald-600 group-hover:bg-emerald-600 group-hover:text-white transition-colors duration-300 shrink-0">
                      <MapPin className="w-5 h-5" />
                    </div>
                    <div>
                      <h3 class="font-bold text-lg text-slate-800 group-hover:text-emerald-700 transition-colors">
                        {district.nameAr}
                      </h3>
                      <p class="text-xs text-slate-400 mt-1">خدمة فورية</p>
                    </div>
                  </div>
                  <ArrowLeft className="w-5 h-5 text-slate-300 group-hover:text-emerald-600 transition-colors transform group-hover:-translate-x-1 duration-300" />
                </a>
              ))}
            </div>
          </Container>
        </section>
      ))
    }
  </div>
</Layout>
