---
import { Image } from "astro:assets";
import { ArrowLeft, Star } from "lucide-react";

import acsCoverImg from "../../assets/images/services/acs-cover.webp";
import bedroomCoverImg from "../../assets/images/services/bedroom-cover.webp";
import kitchenCoverImg from "../../assets/images/services/kitchen-cover.webp";
import majlisImg from "../../assets/images/service-majlis.webp";
import appliancesCoverImg from "../../assets/images/services/appliances-cover.webp";

interface Props {
  district?: string;
  class?: string;
}

const { district, class: className } = Astro.props;

const services = [
  {
    title: district ? `شراء مكيفات ب${district}` : "شراء مكيفات",
    desc: "سبلت، شباك، ودولابي",
    image: acsCoverImg,
    link: "/services/used-acs",
  },
  {
    title: district ? `شراء غرف نوم ب${district}` : "شراء غرف نوم",
    desc: "غرف كاملة ومفردة",
    image: bedroomCoverImg,
    link: "/services/used-bedrooms",
  },
  {
    title: district ? `شراء مطابخ ب${district}` : "شراء مطابخ",
    desc: "مطابخ ألمنيوم وخشب",
    image: kitchenCoverImg,
    link: "/services/used-kitchens",
  },
  {
    title: district ? `شراء مجالس ب${district}` : "شراء مجالس",
    desc: "مجالس عربية وكنب",
    image: majlisImg,
    link: "/services/used-majlis",
  },
  {
    title: district ? `شراء اجهزة ب${district}` : "شراء اجهزة",
    desc: "ثلاجات وغسالات",
    image: appliancesCoverImg,
    link: "/services/used-appliances",
  },
  {
    title: district ? `اثاث مكتبي ب${district}` : "اثاث مكتبي",
    desc: "تصفية مكاتب وشركات",
    image:
      "https://images.unsplash.com/photo-1497366216548-37526070297c?q=80&w=200&auto=format&fit=crop",
    link: "/services/used-office-furniture",
  },
  {
    title: district ? `اثاث فلل ب${district}` : "اثاث فلل",
    desc: "اثاث فاخر وتحف",
    image:
      "https://images.unsplash.com/photo-1600210492486-724fe5c67fb0?q=80&w=200&auto=format&fit=crop",
    link: "/services/villa-furniture",
  },
  {
    title: district ? `معدات مطاعم ب${district}` : "معدات مطاعم",
    desc: "أفران وثلاجات عرض",
    image:
      "https://images.unsplash.com/photo-1556911220-e15b29be8c8f?q=80&w=200&auto=format&fit=crop",
    link: "/services/used-kitchen-equipment",
  },
  {
    title: district ? `شراء اثاث ب${district}` : "شراء اثاث",
    desc: "شراء اثاث الشقق بالكامل",
    image:
      "https://images.unsplash.com/photo-1618221195710-dd6b41faaea6?q=80&w=200&auto=format&fit=crop",
    link: "/services/general-furniture",
  },
  {
    title: district ? `نقل عفش ب${district}` : "نقل عفش",
    desc: "فك وتركيب ونقل",
    image:
      "https://images.unsplash.com/photo-1600518464441-9154a4dea21b?q=80&w=200&auto=format&fit=crop",
    link: "/services/furniture-moving",
  },
];
---

<div
  class={`grid gap-3 ${className || "grid-cols-1 md:grid-cols-2 lg:grid-cols-3"}`}
>
  {
    services.map((service) => (
      <a
        href={service.link}
        class="group flex items-center gap-4 p-3 rounded-xl bg-slate-50 border border-slate-100 hover:bg-white hover:border-emerald-200 hover:shadow-md transition-all duration-300"
      >
        {/* Thumbnail */}
        <div class="relative w-16 h-16 shrink-0 rounded-lg overflow-hidden shadow-sm group-hover:shadow-md transition-shadow">
          {typeof service.image === "string" ? (
            <img
              src={service.image}
              alt={service.title}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              loading="lazy"
            />
          ) : (
            <Image
              src={service.image}
              alt={service.title}
              width={64}
              height={64}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              format="webp"
            />
          )}
        </div>

        {/* Content */}
        <div class="flex-1 min-w-0">
          <h3 class="font-bold text-slate-800 text-sm group-hover:text-emerald-700 transition-colors truncate">
            {service.title}
          </h3>
          <p class="text-xs text-slate-500 truncate mt-0.5">{service.desc}</p>
        </div>

        {/* Action Icon */}
        <div class="w-8 h-8 rounded-full bg-white border border-slate-200 flex items-center justify-center text-slate-400 group-hover:bg-emerald-500 group-hover:border-emerald-500 group-hover:text-white transition-all duration-300">
          <ArrowLeft className="w-4 h-4" />
        </div>
      </a>
    ))
  }
</div>
