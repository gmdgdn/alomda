---
import { DISTRICTS } from '../data/districts';
import { MapPin, ArrowLeft } from 'lucide-react';

interface Props {
  currentRegion: 'North' | 'South' | 'East' | 'West' | 'Central';
  currentDistrictSlug: string;
}

const { currentRegion, currentDistrictSlug } = Astro.props;

// Filter districts: Same region, exclude current district
const nearbyDistricts = DISTRICTS.filter(
  (d) => d.region === currentRegion && d.slug !== currentDistrictSlug
);
---

<div class="rounded-3xl bg-white p-8 border border-slate-100 shadow-lg mt-12">
  <div class="flex items-center justify-between mb-8">
    <h3 class="text-2xl font-bold text-slate-900">
      خدماتنا في أحياء {currentRegion === 'North' ? 'شمال' : currentRegion === 'South' ? 'جنوب' : currentRegion === 'East' ? 'شرق' : currentRegion === 'West' ? 'غرب' : 'وسط'} الرياض
    </h3>
    <a href="/riyadh" class="text-emerald-600 font-bold hover:text-emerald-700 flex items-center gap-2 text-sm">
      عرض كل الأحياء
      <ArrowLeft className="w-4 h-4" />
    </a>
  </div>
  
  <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {nearbyDistricts.map((district) => (
      <a
        href={`/riyadh/${district.slug}`}
        class="group flex items-center justify-between rounded-xl bg-slate-50 p-4 transition-all duration-300 hover:bg-emerald-600 hover:shadow-lg hover:-translate-y-1"
      >
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 rounded-full bg-white flex items-center justify-center text-emerald-600 group-hover:text-emerald-600">
            <MapPin className="h-4 w-4" />
          </div>
          <span class="font-bold text-slate-700 group-hover:text-white transition-colors">{district.nameAr}</span>
        </div>
        <ArrowLeft className="w-4 h-4 text-slate-300 group-hover:text-emerald-200 transition-colors opacity-0 group-hover:opacity-100 transform translate-x-2 group-hover:translate-x-0" />
      </a>
    ))}
  </div>
</div>
