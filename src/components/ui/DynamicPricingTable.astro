---
interface Props {
    vibe?: "Luxury" | "Standard";
}

const { vibe = "Standard" } = Astro.props;

const isLuxury = vibe === "Luxury";
const priceMultiplier = isLuxury ? 1.2 : 1.0;

const today = new Date().toLocaleDateString("ar-SA", {
    year: "numeric",
    month: "long",
    day: "numeric",
});

// Base prices (Standard)
const pricingData = [
    {
        type: "غرفة نوم كاملة",
        condition: "ممتازة / شبه جديدة",
        baseMin: 800,
        baseMax: 2500,
        notes: "حسب الموديل والجودة",
    },
    {
        type: "طقم كنب (7 مقاعد)",
        condition: "نظيف جداً",
        baseMin: 400,
        baseMax: 1200,
        notes: "السعر يختلف للكلاسيك",
    },
    {
        type: "مكيف سبليت",
        condition: "يعمل بكفاءة",
        baseMin: 300,
        baseMax: 800,
        notes: "شامل الفك",
    },
    {
        type: "مطبخ (للمتر)",
        condition: "خشب / ألمنيوم",
        baseMin: 150,
        baseMax: 400,
        notes: "سعر المتر الطولي",
    },
    {
        type: "أجهزة كهربائية",
        condition: "تعمل",
        baseMin: 100,
        baseMax: 1500,
        notes: "ثلاجات، غسالات، أفران",
    },
];

const formatPrice = (price: number) => {
    return Math.round(price * priceMultiplier).toLocaleString("en-US");
};
---

<div class="w-full max-w-4xl mx-auto my-8">
    <!-- Header / Title -->
    <div
        class="flex flex-col md:flex-row items-center justify-between mb-4 gap-4 px-2"
    >
        <div>
            <h2 class="text-2xl font-bold text-emerald-950">
                جدول أسعار الشراء التقديرية
            </h2>
            <p class="text-sm text-gray-500 mt-1 flex items-center gap-2">
                <span
                    class="inline-block w-2 h-2 rounded-full bg-green-500 animate-pulse"
                ></span>
                تحديث اليوم: {today}
            </p>
        </div>
        <div
            class="bg-amber-50 border border-amber-200 text-amber-800 px-4 py-2 rounded-lg text-sm font-medium flex items-center gap-2"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
            </svg>
            <span>الأسعار تشمل الفك والنقل مجاناً</span>
        </div>
    </div>

    <!-- Table Container (Paper/Receipt Look) -->
    <div
        class="bg-white rounded-xl shadow-xl overflow-hidden border border-gray-200 relative"
    >
        <!-- Top Decoration -->
        <div
            class="h-2 bg-gradient-to-r from-emerald-600 via-amber-400 to-emerald-600"
        >
        </div>

        <!-- Mobile Scroll Wrapper -->
        <div class="overflow-x-auto">
            <table class="w-full text-right border-collapse min-w-[600px]">
                <thead>
                    <tr class="bg-emerald-900 text-white">
                        <th
                            class="py-4 px-6 font-bold text-sm uppercase tracking-wider"
                            >النوع</th
                        >
                        <th
                            class="py-4 px-6 font-bold text-sm uppercase tracking-wider"
                            >الحالة</th
                        >
                        <th
                            class="py-4 px-6 font-bold text-sm uppercase tracking-wider"
                            >السعر المتوقع (ريال)</th
                        >
                        <th
                            class="py-4 px-6 font-bold text-sm uppercase tracking-wider"
                            >ملاحظات</th
                        >
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    {
                        pricingData.map((item, index) => (
                            <tr
                                class={`hover:bg-emerald-50/50 transition-colors ${index % 2 === 0 ? "bg-emerald-50/30" : "bg-white"}`}
                            >
                                <td class="py-4 px-6 font-bold text-gray-800">
                                    {item.type}
                                </td>
                                <td class="py-4 px-6 text-gray-600 text-sm">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                        {item.condition}
                                    </span>
                                </td>
                                <td class="py-4 px-6 font-bold text-amber-600 text-lg dir-ltr text-left">
                                    {formatPrice(item.baseMin)} -{" "}
                                    {formatPrice(item.baseMax)}
                                </td>
                                <td class="py-4 px-6 text-gray-500 text-sm italic">
                                    {item.notes}
                                </td>
                            </tr>
                        ))
                    }
                </tbody>
            </table>
        </div>

        <!-- Footer / CTA -->
        <div
            class="bg-gray-50 p-6 border-t border-gray-200 flex flex-col sm:flex-row items-center justify-between gap-4"
        >
            <p class="text-sm text-gray-500 text-center sm:text-right">
                * الأسعار تقريبية وتعتمد على المعاينة الفعلية.
                {
                    isLuxury && (
                        <span class="block text-emerald-700 font-bold mt-1">
                            نقدم أسعار خاصة للأثاث الفاخر والماركات العالمية.
                        </span>
                    )
                }
            </p>

            <a
                href="https://wa.me/966565647753?text=مرحباً، أرغب في الحصول على تسعير دقيق لأثاثي"
                target="_blank"
                class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-emerald-600 hover:bg-emerald-700 shadow-sm hover:shadow-lg transition-all duration-300 gap-2 whitespace-nowrap"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"
                    ></path>
                </svg>
                احصل على تسعير دقيق
            </a>
        </div>
    </div>
</div>
